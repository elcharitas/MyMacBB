{% set db = BB.db() %}
{% if 0 >= db.tables() | length %}

    {% do db.create('users', {
        'uid': ['number', 'required'],
        'username': ['string', 'required', 'min:5'],
        'firstname': ['string', 'nullable'],
        'lastname': ['string', 'nullable']
    }) %}
    
    {% do db.create('forums', {
        'fid': ['number', 'required'],
    }) %}
    
    {% do db.create('threads', {
        'tid': ['number', 'required'],
        'title': ['string'],
        'content': ['text'],
        'thread_id': ['number']
    }) %}
    
    {% do db.create('options', {
        
    }) %}
    
    {% do db.create('mods', {
        'mid': ['number'],
        'active': ['bool']
    }) %}
    {% do stop() %}
{% endif %}